<body>
    <article>
      <div>
        <h1>{{post.title}}</h1>
        {{#if loggedIn}}
          <div>
             <button class="btn-primary" onclick="post-update"/>I Want to Help</button>
          </div>
        {{/if}}
        
      </div>
      <div>
        {{ post.body }}
      </div>
      <div>
        Posted by:
        <p id="postUser">{{post.username}}</p>
        When:
        {{post.deadline}}
        Date Posted:
        {{post.createdAt}}
        Requirements:
        {{post.requirements}}
        Tags:
        {{post.tag}}
      </div>
    </article>
    <div>
      {{! Google maps.  API is restricted. }}
      <iframe
        width="600"
        height="450"
        style="border:0"
        loading="lazy"
        allowfullscreen
        referrerpolicy="no-referrer-when-downgrade"
        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyBJBhD25Oh977iUWwe6QM84YLjGF4g8joo&q=Austin+TX"
      >
      </iframe>
      <button id='update-btn' class='btn btn-primary log-sign' type='submit'>Update Post</button>

      <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBJBhD25Oh977iUWwe6QM84YLjGF4g8joo"></script>
    </div>
    {{#if loggedIn }}
    <script src="../javascript/logout.js"></script>
    <script src="../javascript/postPage.js"></script>
    {{/if}}
  </body>